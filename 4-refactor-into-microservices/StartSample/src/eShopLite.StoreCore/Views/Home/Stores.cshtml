@using eShopLite.StoreCore.Models
@model IEnumerable<StoreInfo>
@{
  ViewBag.Title = "Stores";
  var stores = Model;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<main aria-labelledby="title">
  <h2 id="title">@ViewBag.Title</h2>
  <h3>@ViewBag.Message</h3>

  @if (!string.IsNullOrEmpty(ViewBag.Error as string))
  {
    <div class="alert alert-danger" role="alert">
      @ViewBag.Error
    </div>
  }

  @if (stores == null || !stores.Any())
  {
    <div class="text-center p-4">
      <div class="spinner-container">
        <i class="bi bi-building spinner-icon" aria-hidden="true"></i>
      </div>
      <p class="text-muted mt-3">
        <span class="visually-hidden">Loading store information...</span>
        <em>No stores available at this time.</em>
      </p>
    </div>
  }
  else
  {
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col">Store Name</th>
            <th scope="col">Location</th>
            <th scope="col">Business Hours</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var store in stores)
          {
            <tr>
              <td>
                <strong>@store.Name</strong>
              </td>
              <td>
                <i class="bi bi-geo-alt-fill text-primary me-1"></i>
                @store.City, @store.State
              </td>
              <td>
                <i class="bi bi-clock-fill text-success me-1"></i>
                @store.Hours
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }

  <style>
    .spinner-container {
      display: inline-block;
      font-size: 2rem;
    }

    .spinner-icon {
      animation: spin 2s linear infinite;
      display: inline-block;
      color: #6c757d;
    }

    @@keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }
  </style>
</main>