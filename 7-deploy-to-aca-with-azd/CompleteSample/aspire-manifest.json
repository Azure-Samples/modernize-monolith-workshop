{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "pg-products": {
      "type": "container.v0",
      "connectionString": "Host={pg-products.bindings.tcp.host};Port={pg-products.bindings.tcp.port};Username=postgres;Password={pg-products-password.value}",
      "image": "docker.io/library/postgres:17.5",
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "{pg-products-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "productsdb": {
      "type": "value.v0",
      "connectionString": "{pg-products.connectionString};Database=productsdb"
    },
    "pg-storeinfo": {
      "type": "container.v0",
      "connectionString": "Host={pg-storeinfo.bindings.tcp.host};Port={pg-storeinfo.bindings.tcp.port};Username=postgres;Password={pg-storeinfo-password.value}",
      "image": "docker.io/library/postgres:17.5",
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "{pg-storeinfo-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "storeinfodb": {
      "type": "value.v0",
      "connectionString": "{pg-storeinfo.connectionString};Database=storeinfodb"
    },
    "redis": {
      "type": "container.v0",
      "connectionString": "{redis.bindings.tcp.host}:{redis.bindings.tcp.port},password={redis-password.value}",
      "image": "docker.io/library/redis:7.4",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "redis-server --requirepass $REDIS_PASSWORD"
      ],
      "env": {
        "REDIS_PASSWORD": "{redis-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "eshoplite-products": {
      "type": "project.v0",
      "path": "src/eShopLite.Products/eShopLite.Products.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{eshoplite-products.bindings.http.targetPort}",
        "ConnectionStrings__productsdb": "{productsdb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "eshoplite-storeinfo": {
      "type": "project.v0",
      "path": "src/eShopLite.StoreInfo/eShopLite.StoreInfo.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{eshoplite-storeinfo.bindings.http.targetPort}",
        "ConnectionStrings__storeinfodb": "{storeinfodb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "eshoplite-store": {
      "type": "project.v0",
      "path": "src/eShopLite.Store/eShopLite.Store.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{eshoplite-store.bindings.http.targetPort}",
        "services__eshoplite-products__http__0": "{eshoplite-products.bindings.http.url}",
        "services__eshoplite-products__https__0": "{eshoplite-products.bindings.https.url}",
        "services__eshoplite-storeinfo__http__0": "{eshoplite-storeinfo.bindings.http.url}",
        "services__eshoplite-storeinfo__https__0": "{eshoplite-storeinfo.bindings.https.url}",
        "ConnectionStrings__redis": "{redis.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "pg-products-password": {
      "type": "parameter.v0",
      "value": "{pg-products-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "pg-storeinfo-password": {
      "type": "parameter.v0",
      "value": "{pg-storeinfo-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "redis-password": {
      "type": "parameter.v0",
      "value": "{redis-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    }
  }
}